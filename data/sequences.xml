      <field name="name">Event Booking</field>
      <field name="code">hotel.event.booking</field>
      <field name="prefix">EVT/%(y)s/</field>
      <field name="padding">4</field>
      <!-- optional: <field name="number_next">1</field> -->
    </record>

  </data>
</odoo>
