<odoo>
  <!-- Wizard form -->
  <record id="view_hotel_event_availability_wizard" model="ir.ui.view">
    <field name="name">hotel.event.availability.wizard.form</field>
    <field name="model">hotel.event.availability.wizard</field>
    <field name="arch" type="xml">
      <form string="Search Available Event Halls">
        <group>
          <field name="company_id"/>
          <field name="date_start"/>
          <field name="duration_hours"/>
          <field name="date_end" readonly="1"/>
        </group>
        <group string="Filters">
          <field name="hall_type_id"/>
          <field name="capacity_min"/>
          <field name="amenity_ids" widget="many2many_tags"/>
          <field name="max_price_per_hour"/>
        </group>
        <group>
          <field name="result_hall_ids" widget="many2many_tags" readonly="1"/>
        </group>
        <footer>
          <button name="action_open_results" string="Open Results" type="object" class="btn-primary"/>
          <button name="action_create_booking" string="Create Booking" type="object" class="btn-secondary"/>
          <button string="Close" class="btn-link" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- Server action to open wizard -->
  <record id="action_hotel_event_availability_wizard" model="ir.actions.act_window">
    <field name="name">Search Event Hall Availability</field>
    <field name="res_model">hotel.event.availability.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>


</odoo>
