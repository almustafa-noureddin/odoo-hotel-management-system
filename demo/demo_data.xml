<odoo>
    <!-- =========================
         Branches (Saudi Arabia)
         ========================= -->
    <record id="branch_jeddah" model="res.branch">
        <field name="name">Sunrise Grand – Jeddah</field>
        <field name="location">Jeddah, Saudi Arabia</field>
        <field name="active">True</field>
    </record>
    <record id="branch_riyadh" model="res.branch">
        <field name="name">Sunrise Grand – Riyadh</field>
        <field name="location">Riyadh, Saudi Arabia</field>
        <field name="active">True</field>
    </record>
    <record id="branch_dammam" model="res.branch">
        <field name="name">Sunrise Grand – Dammam</field>
        <field name="location">Dammam, Saudi Arabia</field>
        <field name="active">True</field>
    </record>
    <record id="branch_abha" model="res.branch">
        <field name="name">Sunrise Grand – Abha</field>
        <field name="location">Abha, Saudi Arabia</field>
        <field name="active">True</field>
    </record>
    <record id="branch_alkhobar" model="res.branch">
        <field name="name">Sunrise Grand – Al Khobar</field>
        <field name="location">Al Khobar, Saudi Arabia</field>
        <field name="active">True</field>
    </record>

    <!-- =========================
         Room Types & Amenities
         ========================= -->
    <record id="rt_standard" model="hotel.room.type">
        <field name="name">Standard Room</field>
        <field name="description">King/Twin — business-friendly</field>
        <field name="capacity">2</field>
        <!-- Interview ARR: SAR 450–750; set base price in that band -->
        <field name="default_price">550</field>
    </record>
    <record id="rt_suite" model="hotel.room.type">
        <field name="name">Executive Suite</field>
        <field name="description">One-bedroom suite with lounge</field>
        <field name="capacity">3</field>
        <!-- Interview ARR: SAR 1,200–1,800 -->
        <field name="default_price">1400</field>
    </record>

    <record id="amen_wifi" model="hotel.room.amenity">
        <field name="name">High-Speed Wi-Fi</field>
        <field name="description">Unlimited internet access</field>
    </record>
    <record id="amen_prayer_mat" model="hotel.room.amenity">
        <field name="name">Prayer Mat</field>
        <field name="description">Provided in-room</field>
    </record>
    <record id="amen_city_view" model="hotel.room.amenity">
        <field name="name">City View</field>
    </record>
    <record id="amen_sea_view" model="hotel.room.amenity">
        <field name="name">Sea View</field>
    </record>
    <record id="amen_smart_tv" model="hotel.room.amenity">
        <field name="name">Smart TV</field>
    </record>

    <!-- =========================
         Rooms (small sample per branch)
         ========================= -->
    <!-- Jeddah (flagship; sea view available) -->
    <record id="room_jed_1101" model="hotel.room">
        <field name="name">JED-1101</field>
        <field name="room_type_id" ref="rt_standard"/>
        <field name="branch_id" ref="branch_jeddah"/>
        <field name="floor_number">11</field>
        <field name="status">available</field>
        <field name="price">650</field>
        <field name="amenities_ids" eval="[(6,0,[ref('amen_wifi'), ref('amen_prayer_mat'), ref('amen_smart_tv'), ref('amen_sea_view')])]"/>
    </record>
    <record id="room_jed_1502" model="hotel.room">
        <field name="name">JED-1502</field>
        <field name="room_type_id" ref="rt_suite"/>
        <field name="branch_id" ref="branch_jeddah"/>
        <field name="floor_number">15</field>
        <field name="status">occupied</field>
        <field name="price">1750</field>
        <field name="amenities_ids" eval="[(6,0,[ref('amen_wifi'), ref('amen_prayer_mat'), ref('amen_smart_tv'), ref('amen_sea_view')])]"/>
    </record>

    <!-- Riyadh (urban; no poolside café) -->
    <record id="room_ryd_0708" model="hotel.room">
        <field name="name">RYD-0708</field>
        <field name="room_type_id" ref="rt_standard"/>
        <field name="branch_id" ref="branch_riyadh"/>
        <field name="floor_number">7</field>
        <field name="status">available</field>
        <field name="price">590</field>
        <field name="amenities_ids" eval="[(6,0,[ref('amen_wifi'), ref('amen_prayer_mat'), ref('amen_smart_tv'), ref('amen_city_view')])]"/>
    </record>
    <record id="room_ryd_1603" model="hotel.room">
        <field name="name">RYD-1603</field>
        <field name="room_type_id" ref="rt_suite"/>
        <field name="branch_id" ref="branch_riyadh"/>
        <field name="floor_number">16</field>
        <field name="status">maintenance</field>
        <field name="price">1600</field>
        <field name="amenities_ids" eval="[(6,0,[ref('amen_wifi'), ref('amen_prayer_mat'), ref('amen_smart_tv'), ref('amen_city_view')])]"/>
    </record>

    <!-- Dammam (resort-style; sea view) -->
    <record id="room_dmm_0305" model="hotel.room">
        <field name="name">DMM-0305</field>
        <field name="room_type_id" ref="rt_standard"/>
        <field name="branch_id" ref="branch_dammam"/>
        <field name="floor_number">3</field>
        <field name="status">dirty</field>
        <field name="price">520</field>
        <field name="amenities_ids" eval="[(6,0,[ref('amen_wifi'), ref('amen_prayer_mat'), ref('amen_smart_tv'), ref('amen_sea_view')])]"/>
    </record>

    <!-- Abha (smaller branch) -->
    <record id="room_abha_0202" model="hotel.room">
        <field name="name">ABH-0202</field>
        <field name="room_type_id" ref="rt_standard"/>
        <field name="branch_id" ref="branch_abha"/>
        <field name="floor_number">2</field>
        <field name="status">available</field>
        <field name="price">480</field>
        <field name="amenities_ids" eval="[(6,0,[ref('amen_wifi'), ref('amen_prayer_mat'), ref('amen_smart_tv')])]"/>
    </record>

    <!-- Al Khobar (large; poolside café) -->
    <record id="room_akh_1206" model="hotel.room">
        <field name="name">AKH-1206</field>
        <field name="room_type_id" ref="rt_suite"/>
        <field name="branch_id" ref="branch_alkhobar"/>
        <field name="floor_number">12</field>
        <field name="status">available</field>
        <field name="price">1650</field>
        <field name="amenities_ids" eval="[(6,0,[ref('amen_wifi'), ref('amen_prayer_mat'), ref('amen_smart_tv'), ref('amen_sea_view')])]"/>
    </record>

    <!-- =========================
         Guests (Saudi + intl mix)
         ========================= -->
    <record id="guest_kareem" model="res.partner">
        <field name="name">Kareem Al-Fayed</field>
        <field name="email">kareem@sunrisegrand.sa</field>
        <field name="vip_status">True</field>
        <field name="preferences">High floor, Arabic coffee on arrival</field>
        <field name="nationality" ref="base.sa"/>
    </record>
    <record id="guest_anna" model="res.partner">
        <field name="name">Anna Müller</field>
        <field name="email">anna.mueller@example.de</field>
        <field name="vip_status">False</field>
        <field name="preferences">Gluten-free breakfast, quiet room</field>
    </record>
    <record id="guest_omar" model="res.partner">
        <field name="name">Omar Al-Salem</field>
        <field name="email">omar.salem@example.com</field>
        <field name="vip_status">False</field>
        <field name="preferences">Late checkout if possible</field>
        <field name="nationality" ref="base.sa"/>
    </record>

    <!-- =========================
         Reservations (mix of channels/rates)
         Check-in 14:00 / Check-out 12:00
         ========================= -->
    <!-- Website, standard rate, partial deposit -->
    <record id="resv_anna_riyadh" model="hotel.reservation">
        <field name="guest_id" ref="guest_anna"/>
        <field name="room_id" ref="room_ryd_0708"/>
        <field name="check_in">2025-09-03 14:00:00</field>
        <field name="check_out">2025-09-06 12:00:00</field>
        <field name="booking_source">website</field>
        <field name="rate_type">standard</field>
        <field name="deposit_amount">600</field>
        <field name="total_amount">1770</field>
        <field name="payment_status">partial</field>
        <field name="status">confirmed</field>
    </record>

    <!-- OTA (Booking.com), seasonal rate around winter holidays -->
    <record id="resv_kareem_jeddah" model="hotel.reservation">
        <field name="guest_id" ref="guest_kareem"/>
        <field name="room_id" ref="room_jed_1502"/>
        <field name="check_in">2025-12-22 14:00:00</field>
        <field name="check_out">2025-12-26 12:00:00</field>
        <field name="booking_source">ota</field>
        <field name="rate_type">seasonal</field>
        <field name="deposit_amount">3000</field>
        <field name="total_amount">6800</field>
        <field name="payment_status">partial</field>
        <field name="status">confirmed</field>
    </record>

    <!-- Corporate rate, travel agent channel, Riyadh -->
    <record id="resv_omar_riyadh" model="hotel.reservation">
        <field name="guest_id" ref="guest_omar"/>
        <field name="room_id" ref="room_ryd_1603"/>
        <field name="check_in">2025-10-14 14:00:00</field>
        <field name="check_out">2025-10-16 12:00:00</field>
        <field name="booking_source">travel_agent</field>
        <field name="rate_type">corporate</field>
        <field name="deposit_amount">500</field>
        <field name="total_amount">2800</field>
        <field name="payment_status">unpaid</field>
        <field name="status">draft</field>
    </record>

    <!-- =========================
         Event Halls, Types & Amenities
         (prices per hour; capacities from interview ranges)
         ========================= -->
    <record id="hall_type_large" model="hotel.event.hall.type">
        <field name="name">Large Banquet Hall</field>
        <field name="capacity">400</field>
        <!-- Interview: SAR 5,000–15,000 per event. Use ~SAR 1,800/hr -->
        <field name="price_per_hour">1800</field>
    </record>
    <record id="hall_type_medium" model="hotel.event.hall.type">
        <field name="name">Medium Hall</field>
        <field name="capacity">150</field>
        <field name="price_per_hour">900</field>
    </record>
    <record id="hall_type_small" model="hotel.event.hall.type">
        <field name="name">Meeting Room</field>
        <field name="capacity">30</field>
        <field name="price_per_hour">350</field>
    </record>

    <record id="ev_amen_sound" model="hotel.event.amenity">
        <field name="name">Pro Sound System</field>
    </record>
    <record id="ev_amen_projector" model="hotel.event.amenity">
        <field name="name">Projector and Screen</field>
    </record>
    <record id="ev_amen_arabic_coffee" model="hotel.event.amenity">
        <field name="name">Arabic Coffee Station</field>
    </record>

    <!-- Riyadh: 1 large, 1 medium, 1 small (subset of real distribution) -->
    <record id="hall_ryd_grand1" model="hotel.event.hall">
        <field name="name">Riyadh Grand Ballroom A</field>
        <field name="branch_id" ref="branch_riyadh"/>
        <field name="hall_type_id" ref="hall_type_large"/>
        <field name="capacity">450</field>
        <field name="price_per_hour">2000</field>
        <field name="amenities_ids" eval="[(6,0,[ref('ev_amen_sound'), ref('ev_amen_projector'), ref('ev_amen_arabic_coffee')])]"/>
    </record>
    <record id="hall_ryd_conf1" model="hotel.event.hall">
        <field name="name">Riyadh Conference Hall 1</field>
        <field name="branch_id" ref="branch_riyadh"/>
        <field name="hall_type_id" ref="hall_type_medium"/>
        <field name="capacity">180</field>
        <field name="price_per_hour">950</field>
        <field name="amenities_ids" eval="[(6,0,[ref('ev_amen_projector'), ref('ev_amen_arabic_coffee')])]"/>
    </record>
    <record id="hall_ryd_meet_a" model="hotel.event.hall">
        <field name="name">Riyadh Meeting A</field>
        <field name="branch_id" ref="branch_riyadh"/>
        <field name="hall_type_id" ref="hall_type_small"/>
        <field name="capacity">24</field>
        <field name="price_per_hour">380</field>
        <field name="amenities_ids" eval="[(6,0,[ref('ev_amen_projector')])]"/>
    </record>

    <!-- Jeddah: 1 large + 1 small -->
    <record id="hall_jed_grand" model="hotel.event.hall">
        <field name="name">Jeddah Grand Ballroom</field>
        <field name="branch_id" ref="branch_jeddah"/>
        <field name="hall_type_id" ref="hall_type_large"/>
        <field name="capacity">420</field>
        <field name="price_per_hour">1900</field>
        <field name="amenities_ids" eval="[(6,0,[ref('ev_amen_sound'), ref('ev_amen_projector')])]"/>
    </record>
    <record id="hall_jed_meet_b" model="hotel.event.hall">
        <field name="name">Jeddah Meeting B</field>
        <field name="branch_id" ref="branch_jeddah"/>
        <field name="hall_type_id" ref="hall_type_small"/>
        <field name="capacity">30</field>
        <field name="price_per_hour">360</field>
        <field name="amenities_ids" eval="[(6,0,[ref('ev_amen_arabic_coffee')])]"/>
    </record>

    <!-- Dammam: 1 medium -->
    <record id="hall_dmm_conf" model="hotel.event.hall">
        <field name="name">Dammam Conference Hall</field>
        <field name="branch_id" ref="branch_dammam"/>
        <field name="hall_type_id" ref="hall_type_medium"/>
        <field name="capacity">160</field>
        <field name="price_per_hour">900</field>
        <field name="amenities_ids" eval="[(6,0,[ref('ev_amen_sound'), ref('ev_amen_projector')])]"/>
    </record>

    <!-- Event Packages (prices reflect interview ranges) -->
    <record id="pkg_wedding_gold" model="hotel.event.package">
        <field name="name">Wedding Gold (300 guests)</field>
        <field name="description">Hall + standard décor + sound + Arabic coffee station + buffet</field>
        <field name="price">48000</field>
    </record>
    <record id="pkg_corp_day" model="hotel.event.package">
        <field name="name">Corporate Day Package</field>
        <field name="description">Hall + projector + 2 coffee breaks + lunch</field>
        <field name="price">18000</field>
    </record>

    <!-- Event Bookings (deposit 30–50% as per policy) -->
    <record id="evt_jed_wedding_oct" model="hotel.event.booking">
        <field name="hall_id" ref="hall_jed_grand"/>
        <field name="customer_id" ref="guest_kareem"/>
        <field name="event_date">2025-10-10 18:00:00</field>
        <field name="duration_hours">6</field>
        <field name="package_id" ref="pkg_wedding_gold"/>
        <field name="deposit_amount">20000</field>
        <field name="total_amount">48000</field>
        <field name="status">confirmed</field>
    </record>
    <record id="evt_ryd_corp_nov" model="hotel.event.booking">
        <field name="hall_id" ref="hall_ryd_conf1"/>
        <field name="customer_id" ref="guest_anna"/>
        <field name="event_date">2025-11-18 09:00:00</field>
        <field name="duration_hours">8</field>
        <field name="package_id" ref="pkg_corp_day"/>
        <field name="deposit_amount">6000</field>
        <field name="total_amount">18000</field>
        <field name="status">confirmed</field>
    </record>

    <!-- =========================
         Housekeeping Tasks
         ========================= -->
    <record id="hktask_clean_dmm_0305" model="hotel.housekeeping.task">
        <field name="room_id" ref="room_dmm_0305"/>
        <field name="task_type">cleaning</field>
        <field name="status">pending</field>
        <field name="date_scheduled">2025-08-21 09:00:00</field>
    </record>
    <record id="hktask_inspect_ryd_1603" model="hotel.housekeeping.task">
        <field name="room_id" ref="room_ryd_1603"/>
