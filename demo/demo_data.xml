        <field name="status">in_progress</field>
        <field name="date_scheduled">2025-08-21 10:30:00</field>
    </record>
    <record id="hktask_clean_jed_1101" model="hotel.housekeeping.task">
        <field name="room_id" ref="room_jed_1101"/>
        <field name="task_type">cleaning</field>
        <field name="status">pending</field>
        <field name="date_scheduled">2025-08-21 13:30:00</field>
    </record>
</odoo>
