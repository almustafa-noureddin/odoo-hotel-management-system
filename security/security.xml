<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="module_category_hotel" model="ir.module.category">
            <field name="name">Hotel Management</field>
            <field name="description">User access levels for the Hotel Management module.</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_hotel_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_hotel"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_hotel_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_hotel"/>
            <field name="implied_ids" eval="[(4, ref('group_hotel_user'))]"/>
        </record>

    </data>
    <data>
        <record id="hotel_room_multi_company_rule" model="ir.rule">
            <field name="name">Hotel Room: User's Companies</field>
            <field name="model_id" ref="model_hotel_room"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_hotel_user'))]"/>
        </record>

        <record id="hotel_reservation_multi_company_rule" model="ir.rule">
            <field name="name">Hotel Reservation: User's Companies</field>
            <field name="model_id" ref="model_hotel_reservation"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_hotel_user'))]"/>
        </record>
        
        <record id="hotel_event_hall_multi_company_rule" model="ir.rule">
            <field name="name">Event Hall: User's Companies</field>
            <field name="model_id" ref="model_hotel_event_hall"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_hotel_user'))]"/>
        </record>

        <record id="hotel_event_booking_multi_company_rule" model="ir.rule">
            <field name="name">Event Booking: User's Companies</field>
            <field name="model_id" ref="model_hotel_event_booking"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_hotel_user'))]"/>
        </record>

         <record id="hotel_housekeeping_task_multi_company_rule" model="ir.rule">
            <field name="name">Housekeeping Task: User's Companies</field>
            <field name="model_id" ref="model_hotel_housekeeping_task"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_hotel_user'))]"/>
        </record>

        </data>

        <data>
        <record id="base.group_system" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('custom_hotel_management.group_hotel_manager'))]"/>
        </record>
        </data>
   
        
</odoo>